{
    "name": "greencart-ecommerce",
    "version": "1.0.0",
    "description": "A modern e-commerce application with AI chatbot",
    "scripts": {
      "build": "cd client && npm run build",
      "start": "cd server && node server.js",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
